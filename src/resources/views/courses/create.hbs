<div class="mt-4">
    <h3>Đăng khoá học</h3>
    <form method="POST" action="/courses/store" enctype="multipart/form-data" id="course-form">
        <div class="form-group">
            <label for="name">Tên khoá học</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control" id="description" name="description" rows="10"></textarea>
            <script
                src="https://cdn.tiny.cloud/1/pjvq3go7lz26fedfe1kmtjmbzyycqsu637xcrwizdo92lq3r/tinymce/6/tinymce.min.js"
                referrerpolicy="origin"></script>
            <script>
                tinymce.init({
                    selector: '#description',
                    setup: function (editor) {
                        editor.on('change', function () {
                            editor.save();
                        });
                    }
                });
            </script>
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" class="form-control" id="videoId" name="videoId" required>
        </div>
        <div class="form-group">
            <label for="image">Hình ảnh</label>
            <input type="file" class="form-control" id="image" name="image" accept="image/*" required>
        </div>
        <div class="form-group">
            <label for="level">Trình độ</label>
            <input type="text" class="form-control" id="level" name="level" required>
        </div>
        <button type="submit" class="btn btn-primary">Đăng khoá học</button>
    </form>
</div>

<script>
    document.getElementById('course-form').addEventListener('submit', function (event) {
        const name = document.getElementById('name').value.trim();
        const videoId = document.getElementById('videoId').value.trim();
        
        if (!name || !videoId) {
            event.preventDefault();
            alert('Vui lòng nhập đầy đủ tên khoá học và Video ID.');
        }
    });
</script>
